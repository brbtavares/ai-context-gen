			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$rustc"
			],
			"detail": "Build the project in release mode for production"
		},
		{
			"label": "ğŸ§ª Run Tests",
			"type": "shell",
			"command": "cargo",
			"args": [
				"test"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": [
				"$rustc"
			],
